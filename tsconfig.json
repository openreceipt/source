{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2015",

    "baseUrl": "./packages",
    "rootDir": ".",

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
