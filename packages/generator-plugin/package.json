{
  "name": "@openreceipt/generator-plugin",
  "description": "A Yeoman generator for OpenReceipt plugins",
  "version": "0.0.1",
  "license": "MIT",
  "main": "generators/app/index.js",
  "types": "generators/app/index.d.ts",
  "keywords": [
    "openreceipt",
    "yeoman",
    "yeoman-generator",
    "typescript"
  ],
  "author": {
    "name": "OpenReceipt",
    "url": "https://github.com/openreceipt"
  },
  "homepage": "https://github.com/openreceipt/source",
  "repository": {
    "type": "git",
    "url": "https://github.com/openreceipt/source.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.3.0"
  },
  "scripts": {
    "cleanup": "yarn prebuild && yarn pretest && rimraf *.tsbuildinfo",
    "prebuild": "rimraf generators/",
    "build:docs": "rimraf docs/api && typedoc --out docs/api --target es6 --theme minimal --mode file src",
    "build:watch": "tsc-watch --onSuccess \"yarn postbuild\"",
    "build": "tsc -b",
    "postbuild": "scripts/copyTemplates.sh",
    "start": "ts-node src/index.ts",
    "precommit": "lint-staged",
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts' -e 'src/**/*.spec.ts'",
    "pretest": "rimraf coverage/",
    "test": "echo 'No tests for this package'",
    "prepublishOnly": "yarn cleanup && yarn build"
  },
  "dependencies": {
    "lodash.camelcase": "^4",
    "lodash.kebabcase": "^4",
    "tslib": "^1",
    "yeoman-generator": "^3"
  },
  "devDependencies": {
    "@endemolshinegroup/prettier-config": "^1",
    "@endemolshinegroup/tslint-config": "^1",
    "@types/jest": "^24",
    "@types/lodash.camelcase": "^4",
    "@types/lodash.kebabcase": "^4",
    "@types/node": "8.*",
    "@types/rimraf": "^2",
    "@types/uuid": "^3",
    "@types/yeoman-generator": "^3",
    "@types/yeoman-test": "^1",
    "jest": "^24",
    "lint-staged": "^8",
    "prettier": "^1",
    "rimraf": "^2",
    "ts-jest": "^24",
    "tsc-watch": "^2",
    "tslint": "^5",
    "tslint-config-prettier": "^1",
    "tslint-eslint-rules": "^5",
    "typedoc": "^0.13.0",
    "typescript": "^3",
    "uuid": "^3",
    "yeoman-assert": "^3",
    "yeoman-test": "^2"
  },
  "publishConfig": {
    "access": "public"
  }
}
