{
  "name": "@openreceipt/source",
  "description": "Parse receipt information from your emails!",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "OpenReceipt",
    "url": "https://github.com/openreceipt"
  },
  "homepage": "https://github.com/openreceipt/source",
  "repository": {
    "type": "git",
    "url": "https://github.com/openreceipt/source.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.3.0"
  },
  "scripts": {
    "cleanup": "lerna run cleanup",
    "commit": "git-cz",
    "build": "rimraf dist/ && tsc",
    "lint": "lerna run lint",
    "test": "CI=true lerna run test",
    "release": "lerna publish --conventional-commits --github-release --yes"
  },
  "dependencies": {
    "tslib": "^1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7",
    "@commitlint/config-conventional": "^7",
    "@endemolshinegroup/cz-github": "^1",
    "commitizen": "^3",
    "husky": "^2",
    "lerna": "^3",
    "lint-staged": "^8"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@openreceipt/cli",
      "**/@openreceipt/cli/**",
      "**/@types/inquirer",
      "**/@types/inquirer/**",
      "**/@types/yeoman-generator",
      "**/@types/yeoman-generator/**",
      "**/@types/yeoman-environment",
      "**/@types/yeoman-environment/**",
      "**/@types/yeoman-test",
      "**/@types/yeoman-test/**"
    ]
  }
}
